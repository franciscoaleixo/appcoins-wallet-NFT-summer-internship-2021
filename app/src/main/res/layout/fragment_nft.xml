<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <androidx.coordinatorlayout.widget.CoordinatorLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

      <com.google.android.material.appbar.CollapsingToolbarLayout
          android:id="@+id/toolbar_layout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/appbar_background_color"
          android:elevation="2dp"
          android:fitsSystemWindows="false"
          android:theme="@style/AppTheme.AppBarOverlay"
          app:layout_scrollFlags="scroll|exitUntilCollapsed"
          app:titleEnabled="false"
          app:toolbarId="@+id/toolbar"
          >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:elevation="2dp"
            android:fitsSystemWindows="false"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />

      </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nft_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_anchor="@+id/nft_scroll_view"
        app:layout_anchorGravity="top"
        >

      <TextView
          android:id="@+id/nft_info_label"
          style="@style/BalanceTitleStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:gravity="start"
          android:visibility="invisible"
          app:layout_constraintBottom_toBottomOf="@id/nft_info_value"
          app:layout_constraintEnd_toStartOf="@id/nft_info_value"
          app:layout_constraintStart_toStartOf="@id/nft_info_value"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="NFT in wallet"
          />

      <TextView
          android:id="@+id/nft_info_value"
          style="@style/BalanceTitleStyle.Large"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="64dp"
          android:gravity="end|center_vertical"
          android:maxLines="1"
          android:visibility="invisible"
          app:autoSizeMinTextSize="16sp"
          app:autoSizeTextType="uniform"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/nft_info_label"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="1,000,000,000,000.00"
          />

      <com.airbnb.lottie.LottieAnimationView
          android:id="@+id/nft_info_lable_placeholder"
          android:layout_width="120dp"
          android:layout_height="20dp"
          android:layout_marginBottom="77dp"
          android:scaleType="fitStart"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@id/nft_info_value_placeholder"
          app:layout_constraintHorizontal_bias="0"
          app:layout_constraintHorizontal_chainStyle="spread_inside"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="1"
          app:lottie_loop="true"
          app:lottie_rawRes="@raw/balance_label_animation"
          />

      <com.airbnb.lottie.LottieAnimationView
          android:id="@+id/nft_info_value_placeholder"
          android:layout_width="120dp"
          android:layout_height="39dp"
          android:layout_marginBottom="64dp"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="1"
          app:layout_constraintStart_toEndOf="@id/nft_info_lable_placeholder"
          app:layout_constraintTop_toTopOf="parent"
          app:lottie_loop="true"
          app:lottie_rawRes="@raw/balance_overall_animation"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nft_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:behavior_overlapTop="63dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nft_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="750dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:paddingTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/nft_layout"

            />
        <include
            android:id="@+id/nft_update"
            layout="@layout/bonus_updated_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nft_recycler_view"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
  </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
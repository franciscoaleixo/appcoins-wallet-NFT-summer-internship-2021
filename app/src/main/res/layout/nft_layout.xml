<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wallet_card"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/background_card"
    android:elevation="2dp"

    >
  <ImageView
      android:id="@+id/level_locked_icon"
      android:layout_width="140dp"
      android:layout_height="140dp"
      android:layout_marginStart="16dp"
      android:src="@drawable/gamification_lock"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/locked_text"
      style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:fontFamily="sans-serif-medium"
      android:lineSpacingExtra="5sp"
      android:textColor="#000f1a"
      android:textSize="15sp"
      android:gravity="right"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/level_locked_icon"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="NFT name here"
      />
</androidx.constraintlayout.widget.ConstraintLayout>